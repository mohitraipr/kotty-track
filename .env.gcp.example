# GCP Environment Variables Template
# Copy this to .env and fill in your values

# ===================
# GCP Configuration
# ===================
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=kotty-track-uploads

# For local development only (not needed in Cloud Run)
# Download service account key from GCP Console
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ===================
# Database (Cloud SQL)
# ===================
# In Cloud Run, use Unix socket path
DB_HOST=/cloudsql/PROJECT_ID:asia-south1:kotty-mysql
# For local development with Cloud SQL Proxy
# DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=kotty_user
DB_PASSWORD=your-secure-password
DB_NAME=kotty_db

# ===================
# Application
# ===================
PORT=8080
NODE_ENV=production
SESSION_SECRET=your-session-secret-here
APP_URL=https://your-cloud-run-url.run.app

# ===================
# Web Push (unchanged)
# ===================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ===================
# Shopify (unchanged)
# ===================
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxx
SHOPIFY_API_VERSION=2024-01
SHOPIFY_WEBHOOK_SECRET=whsec_xxxxx

# ===================
# EasyEcom (unchanged)
# ===================
EASYECOM_API_BASE=https://api.easyecom.io
EASYECOM_API_KEY=xxxxx
EASYECOM_ACCESS_TOKEN=xxxxx

# ===================
# Flipkart (unchanged)
# ===================
FLIPKART_APP_ID=xxxxx
FLIPKART_APP_SECRET=xxxxx

# ===================
# Vendor Files (GCS)
# ===================
VENDOR_FILES_BUCKET=kotty-track-uploads
VENDOR_FILES_PREFIX=vendor-files/
