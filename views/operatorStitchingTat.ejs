<!DOCTYPE html>
<html>
<head>
  <title>Operator Stitching TAT Dashboard</title>
  <style>
    .card {
      border: 1px solid #ccc;
      margin: 10px;
      padding: 10px;
      display: inline-block;
      width: 250px;
    }
    .card h3 { margin: 0 0 10px; }
    .card p { margin: 5px 0; }
  </style>
</head>
<body>
  <h1>Operator TAT Overview (Stitching)</h1>

  <div style="display: flex; flex-wrap: wrap;">
    <% masterCards.forEach(card => { %>
      <div class="card">
        <h3><%= card.username %></h3>
        <p>Pieces Pending Approval: <%= card.pendingApproval %></p>
        <p>In-Line Pieces: <%= card.inLinePieces %></p>

        <!-- Link to the detail page for this Master -->
        <a href="/operator/stitching-tat/<%= card.masterId %>">
          View TAT Detail
        </a>
      </div>
    <% }) %>
  </div>
</body>
</html>
