<!DOCTYPE html>
<html>
<head>
  <title>Operator Stitching TAT (Summary)</title>
  <style>
    .cards {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .card {
      border: 1px solid #ccc;
      padding: 10px;
      width: 200px;
      box-sizing: border-box;
    }

    .card h3 {
      margin: 0 0 10px;
      font-size: 16px;
    }
    .card p {
      margin: 3px 0;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <h1>Operator Stitching TAT (Summary)</h1>

  <!-- Download Excel link -->
  <p>
    <a href="/stitching-tat?download=1" style="text-decoration: none; font-weight: bold;">
      Download Excel
    </a>
  </p>

  <!-- Cards for each Master -->
  <div class="cards">
    <% masterCards.forEach((card) => { %>
      <div class="card">
        <h3><%= card.username %></h3>
        <p><strong>Pending Approval:</strong> <%= card.pendingApproval %></p>
        <p><strong>In-Line Pieces:</strong> <%= card.inLinePieces %></p>

        <!-- Link to detail route for that Master -->
        <p>
          <a href="/stitching-tat/<%= card.masterId %>">
            View Detail
          </a>
        </p>
      </div>
    <% }); %>
  </div>
</body>
</html>
