<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin: All Uploads</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"/>
</head>
<body class="container py-5">

  <h1 class="mb-4">All User Uploads</h1>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Marketplace</th>
        <th>Filename</th>
        <th>Uploaded At</th>
        <th>Download</th>
      </tr>
    </thead>
    <tbody>
      <% files.forEach(f => { %>
        <tr>
          <td><%= f.id %></td>
          <td><%= f.username %></td>
          <td><%= f.marketplace %></td>
          <td><%= f.original_filename %></td>
          <td><%= f.uploaded_at.toLocaleString() %></td>
          <td>
            <a href="/catalogUpload/download/<%= f.id %>" class="btn btn-sm btn-outline-primary">
              Download
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
