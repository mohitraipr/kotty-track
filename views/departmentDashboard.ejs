<!-- views/departmentDashboard.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Department Dashboard</title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  />
  <style>
    .table-scroll {
      max-height: 400px;
      overflow-y: auto;
    }
    .bordered-block {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 1rem;
      margin-bottom: 1rem;
      background-color: #fff;
    }
    .hidden { display: none; }
  </style>
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <span class="navbar-brand">Department Dashboard</span>
      <div class="ms-auto">
        <span class="navbar-text me-3">
          Welcome, <strong><%= user.username %></strong> (Role: <%= user.roleName %>)
        </span>
        <a href="/logout" class="btn btn-outline-light">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>

    <h3>My Assigned Lots</h3>
    <% if (myAssignments.length === 0) { %>
      <p>No assigned lots found for your department.</p>
    <% } else { %>
      <div class="table-scroll">
      <% myAssignments.forEach(asg => { %>
        <div class="bordered-block">
          <h5>Lot No: <%= asg.lot_no %></h5>
          <p>
            <strong>SKU:</strong> <%= asg.sku %> |
            <strong>Fabric:</strong> <%= asg.fabric_type %> |
            <strong>Status:</strong> <%= asg.assignment_status %> |
            <strong>Assigned At:</strong> <%= new Date(asg.assigned_at).toLocaleString() %>
          </p>
          <form method="POST" action="/department/confirm">
            <input type="hidden" name="assignment_id" value="<%= asg.assignment_id %>" />
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Size</th>
                  <th>Assigned Pieces</th>
                  <th>Completed Pieces (so far)</th>
                  <th>Confirm Now</th>
                </tr>
              </thead>
              <tbody>
                <% asg.sizes.forEach((sz, idx) => { %>
                  <tr>
                    <td><%= sz.size_label %></td>
                    <td><%= sz.assigned_pieces %></td>
                    <td><%= sz.completed_pieces %></td>
                    <td>
                      <input type="hidden" name="sizeConfirms[<%= idx %>][size_assignment_id]" value="<%= sz.size_assignment_id %>" />
                      <input
                        type="number"
                        class="form-control form-control-sm"
                        name="sizeConfirms[<%= idx %>][completed_pieces]"
                        min="0"
                        max="<%= (sz.assigned_pieces - sz.completed_pieces) %>"
                        value="<%= (sz.assigned_pieces - sz.completed_pieces) %>"
                      />
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

            <div class="mb-3">
              <label class="form-label">Remarks (optional)</label>
              <textarea class="form-control" name="remarks" rows="2"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Confirm</button>
          </form>
        </div>
      <% }) %>
      </div>
    <% } %>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
