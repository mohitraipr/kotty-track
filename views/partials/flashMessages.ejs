<!-- Flash Messages - Professional Style -->
<div class="flash-messages-container" style="margin-bottom: 1.5rem;">

  <!-- Error Messages -->
  <% if (error && error.length > 0) { %>
    <% error.forEach(function(err) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
          <div class="alert-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
          </div>
          <div class="alert-content flex-grow-1">
            <div class="alert-title fw-semibold">Error</div>
            <div><%= err %></div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% }); %>
  <% } %>

  <!-- Success Messages -->
  <% if (success && success.length > 0) { %>
    <% success.forEach(function(msg) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
          <div class="alert-icon">
            <i class="bi bi-check-circle-fill"></i>
          </div>
          <div class="alert-content flex-grow-1">
            <div class="alert-title fw-semibold">Success</div>
            <div><%= msg %></div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% }); %>
  <% } %>

  <!-- Warning Messages -->
  <% if (typeof warning !== 'undefined' && warning.length > 0) { %>
    <% warning.forEach(function(msg) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
          <div class="alert-icon">
            <i class="bi bi-exclamation-circle-fill"></i>
          </div>
          <div class="alert-content flex-grow-1">
            <div class="alert-title fw-semibold">Warning</div>
            <div><%= msg %></div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% }); %>
  <% } %>

  <!-- Info Messages -->
  <% if (typeof info !== 'undefined' && info.length > 0) { %>
    <% info.forEach(function(msg) { %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
          <div class="alert-icon">
            <i class="bi bi-info-circle-fill"></i>
          </div>
          <div class="alert-content flex-grow-1">
            <div class="alert-title fw-semibold">Information</div>
            <div><%= msg %></div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% }); %>
  <% } %>

</div>
