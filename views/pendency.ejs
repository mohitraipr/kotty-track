<!-- views/pendency.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Department Pendency for <%= lot.lot_no %></title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  />
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <span class="navbar-brand">Lot Pendency</span>
      <div class="ms-auto">
        <span class="navbar-text me-3">
          Welcome, <strong><%= user.username %></strong> (Role: <%= user.roleName %>)
        </span>
        <a href="/logout" class="btn btn-outline-light">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>

    <h3>Department Pendency for Lot <%= lot.lot_no %></h3>
    <p>
      <strong>SKU:</strong> <%= lot.sku %> | 
      <strong>Fabric:</strong> <%= lot.fabric_type %> | 
      <strong>Confirmed?:</strong> <%= lot.is_confirmed %><br/>
      <strong>Total Pieces:</strong> <%= lot.total_pieces %>
    </p>
    <hr/>

    <% if (deptAssignments.length === 0) { %>
      <p>No department assignments found for this lot.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Assigned To (User)</th>
            <th>Role</th>
            <th>Assigned Pieces</th>
            <th>Confirmed Pieces</th>
            <th>Status</th>
            <th>Assigned At</th>
          </tr>
        </thead>
        <tbody>
          <% deptAssignments.forEach(d => { %>
            <tr>
              <td><%= d.assigned_to_user %></td>
              <td><%= d.assigned_to_role %></td>
              <td><%= d.assigned_pieces %></td>
              <td><%= d.total_confirmed %></td>
              <td><%= d.status %></td>
              <td><%= new Date(d.assigned_at).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <a href="/operator/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
