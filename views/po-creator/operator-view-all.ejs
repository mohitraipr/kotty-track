<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All PO Creators Data - Kotty Track</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: #f8f9fa;
      padding: 20px;
    }
    .container-fluid {
      max-width: 1600px;
      margin: 0 auto;
      background: white;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    .back-btn, .download-btn {
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      border: none;
    }
    .back-btn {
      background: #6c757d;
      color: white;
    }
    .download-btn {
      background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
      color: white;
    }
    .filter-section {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 20px;
    }
    .carton-card {
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 15px;
      cursor: pointer;
      transition: all 0.3s;
    }
    .carton-card:hover {
      background: #e9ecef;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .creator-badge {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.85rem;
      display: inline-block;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-people"></i> All PO Creators Inward Data</h2>
      <div>
        <a href="/po-creator/operator/download-all-excel" class="download-btn me-2">
          <i class="bi bi-download"></i> Download All Excel
        </a>
        <a href="/operator/dashboard" class="back-btn">
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
      </div>
    </div>

    <%- include('../partials/flashMessages') %>

    <div class="filter-section">
      <div class="row">
        <div class="col-md-6">
          <input type="text" id="searchInput" class="form-control" placeholder="Search by carton number, creator, or packed by...">
        </div>
        <div class="col-md-3">
          <input type="date" id="dateFilter" class="form-control" placeholder="Filter by date">
        </div>
        <div class="col-md-3">
          <button class="btn btn-secondary w-100" onclick="clearFilters()">
            <i class="bi bi-x-circle"></i> Clear Filters
          </button>
        </div>
      </div>
    </div>

    <div class="mb-3">
      <span class="badge bg-primary">Total Cartons: <span id="totalCount"><%= cartons.length %></span></span>
    </div>

    <% if (cartons.length === 0) { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No inward entries found.
      </div>
    <% } else { %>
      <div class="row" id="cartonContainer">
        <% cartons.forEach(carton => { %>
          <div class="col-md-6 col-lg-4 carton-item"
               data-carton-number="<%= carton.carton_number.toLowerCase() %>"
               data-creator="<%= carton.creator_username.toLowerCase() %>"
               data-packed-by="<%= carton.packed_by.toLowerCase() %>"
               data-date="<%= carton.date_of_packing %>">
            <div class="carton-card" onclick="viewCartonDetails(<%= carton.id %>)">
              <div class="mb-2">
                <span class="creator-badge">
                  <i class="bi bi-person"></i> <%= carton.creator_username %>
                </span>
              </div>
              <h5><i class="bi bi-box"></i> <%= carton.carton_number %></h5>
              <hr>
              <div class="d-flex justify-content-between">
                <small><strong>Packed:</strong> <%= new Date(carton.date_of_packing).toLocaleDateString() %></small>
                <small><strong>By:</strong> <%= carton.packed_by %></small>
              </div>
              <div class="d-flex justify-content-between mt-2">
                <small><strong>SKUs:</strong> <%= carton.sku_count %></small>
                <small><strong>Total Qty:</strong> <%= carton.total_quantity %></small>
              </div>
              <small class="text-muted d-block mt-2">
                <i class="bi bi-clock"></i> <%= new Date(carton.created_at).toLocaleString() %>
              </small>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- Modal for Carton Details -->
  <div class="modal fade" id="cartonModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Carton Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="modalContent">
          <!-- Content will be loaded here -->
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    async function viewCartonDetails(cartonId) {
      try {
        const response = await fetch(`/po-creator/api/carton/${cartonId}`);
        const data = await response.json();

        if (response.ok) {
          let html = `
            <div class="mb-3">
              <h6>Carton Information</h6>
              <table class="table table-bordered">
                <tr>
                  <th>Carton Number</th>
                  <td>${data.carton.carton_number}</td>
                </tr>
                <tr>
                  <th>Date of Packing</th>
                  <td>${new Date(data.carton.date_of_packing).toLocaleDateString()}</td>
                </tr>
                <tr>
                  <th>Packed By</th>
                  <td>${data.carton.packed_by}</td>
                </tr>
              </table>
            </div>

            <div>
              <h6>SKU Details</h6>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>SKU Code</th>
                    <th>Full SKU</th>
                    <th>Size</th>
                    <th>Quantity</th>
                  </tr>
                </thead>
                <tbody>
          `;

          data.skus.forEach(sku => {
            html += `
              <tr>
                <td>${sku.brand_code}</td>
                <td>${sku.category}</td>
                <td>${sku.sku_code}</td>
                <td><strong>${sku.full_sku}</strong></td>
                <td>${sku.size}</td>
                <td>${sku.quantity}</td>
              </tr>
            `;
          });

          html += `
                </tbody>
              </table>
            </div>
          `;

          document.getElementById('modalContent').innerHTML = html;
          const modal = new bootstrap.Modal(document.getElementById('cartonModal'));
          modal.show();
        } else {
          alert('Error loading carton details');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error loading carton details');
      }
    }

    // Filter functionality
    document.getElementById('searchInput').addEventListener('keyup', filterCartons);
    document.getElementById('dateFilter').addEventListener('change', filterCartons);

    function filterCartons() {
      const searchValue = document.getElementById('searchInput').value.toLowerCase();
      const dateValue = document.getElementById('dateFilter').value;
      const cartonItems = document.querySelectorAll('.carton-item');
      let visibleCount = 0;

      cartonItems.forEach(item => {
        const cartonNumber = item.dataset.cartonNumber;
        const creator = item.dataset.creator;
        const packedBy = item.dataset.packedBy;
        const date = item.dataset.date;

        let showItem = true;

        // Text search
        if (searchValue) {
          showItem = cartonNumber.includes(searchValue) ||
                     creator.includes(searchValue) ||
                     packedBy.includes(searchValue);
        }

        // Date filter
        if (dateValue && showItem) {
          showItem = date === dateValue;
        }

        item.style.display = showItem ? 'block' : 'none';
        if (showItem) visibleCount++;
      });

      document.getElementById('totalCount').textContent = visibleCount;
    }

    function clearFilters() {
      document.getElementById('searchInput').value = '';
      document.getElementById('dateFilter').value = '';
      filterCartons();
    }
  </script>
</body>
</html>
