<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Video Finder</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/professional.css">
  <style>
    .found-row { background-color: #d4edda !important; }
    .not-found-row { background-color: #f8d7da !important; }
    .video-link { font-weight: 500; text-decoration: none; }
    .video-link:hover { text-decoration: underline; }
    .awb-input { min-height: 100px; font-family: monospace; }
    .stats-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
    .search-mode-btn.active { background-color: #0d6efd; color: white; }
    .progress-container { display: none; }
    .progress-container.active { display: block; }
    .live-stats { font-size: 0.85rem; }
    .live-stats .stat-item { display: inline-block; margin-right: 15px; }
    .cancel-btn { margin-left: 10px; }
  </style>
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand d-flex align-items-center gap-2">
      <i class="bi bi-camera-video"></i> Video Finder
    </span>
    <div class="d-flex gap-2">
      <% if (isMohitOperator) { %>
        <a href="/mail-manager" class="btn btn-outline-light btn-sm">
          <i class="bi bi-envelope"></i> Mail Manager
        </a>
      <% } %>
      <a href="/logout" class="btn btn-outline-light btn-sm">
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>
    </div>
  </div>
</nav>

<div class="container-fluid py-4">
  <div class="row g-4">
    <!-- Search Panel -->
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-search"></i> Search Videos</h5>
        </div>
        <div class="card-body">
          <!-- Search Mode Toggle -->
          <div class="btn-group w-100 mb-3" role="group">
            <button type="button" class="btn btn-outline-primary search-mode-btn active" data-mode="awb">
              <i class="bi bi-upc-scan"></i> By AWB
            </button>
            <button type="button" class="btn btn-outline-primary search-mode-btn" data-mode="date">
              <i class="bi bi-calendar"></i> By Date
            </button>
            <button type="button" class="btn btn-outline-primary search-mode-btn" data-mode="keyword">
              <i class="bi bi-search"></i> Keyword
            </button>
          </div>

          <!-- AWB Search -->
          <div id="awbSearchPanel">
            <div class="mb-3">
              <label for="awbList" class="form-label">AWB / Tracking Numbers</label>
              <textarea
                class="form-control awb-input"
                id="awbList"
                placeholder="Enter AWB numbers (one per line, or comma/space separated)"
              ></textarea>
              <small class="text-muted">Paste multiple AWBs to search in bulk</small>
            </div>
            <button type="button" class="btn btn-primary w-100" id="searchAwbBtn">
              <i class="bi bi-search"></i> Search AWBs
            </button>
          </div>

          <!-- Date Search -->
          <div id="dateSearchPanel" class="d-none">
            <div class="mb-3">
              <label for="searchDate" class="form-label">Select Date</label>
              <input type="date" class="form-control" id="searchDate" value="<%= new Date().toISOString().split('T')[0] %>">
              <small class="text-muted">View all videos uploaded on this date</small>
            </div>
            <button type="button" class="btn btn-primary w-100" id="searchDateBtn">
              <i class="bi bi-calendar-check"></i> Browse Date
            </button>
          </div>

          <!-- Keyword Search -->
          <div id="keywordSearchPanel" class="d-none">
            <div class="mb-3">
              <label for="keywordInput" class="form-label">Search Keyword</label>
              <input type="text" class="form-control" id="keywordInput" placeholder="e.g., 2026, SF123, etc.">
              <small class="text-muted">Search for any text in video filenames</small>
            </div>
            <div class="mb-3">
              <label for="keywordDate" class="form-label">Date (optional)</label>
              <input type="date" class="form-control" id="keywordDate">
              <small class="text-muted">Limit search to specific date</small>
            </div>
            <button type="button" class="btn btn-primary w-100" id="searchKeywordBtn">
              <i class="bi bi-search"></i> Search Keyword
            </button>
          </div>

          <hr>

          <div class="mb-3">
            <label class="form-label">Bulk Upload (Excel/CSV)</label>
            <input type="file" class="form-control" id="bulkFile" accept=".xlsx,.xls,.csv">
            <small class="text-muted">Upload file with AWB column</small>
          </div>
          <button type="button" class="btn btn-outline-primary w-100" id="bulkSearchBtn" disabled>
            <i class="bi bi-file-earmark-spreadsheet"></i> Bulk Search
          </button>
        </div>
      </div>

      <% if (bucketName) { %>
      <div class="card shadow-sm mt-3">
        <div class="card-body text-center text-muted">
          <small><i class="bi bi-cloud"></i> S3 Bucket: <code><%= bucketName %></code></small>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Results Panel -->
    <div class="col-lg-8">
      <div id="alertContainer"></div>

      <!-- Progress Bar for Large Searches -->
      <div class="card shadow-sm mb-3 progress-container" id="progressContainer">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="fw-bold"><i class="bi bi-hourglass-split"></i> Processing Large Search...</span>
            <button class="btn btn-sm btn-outline-danger cancel-btn" id="cancelSearchBtn">
              <i class="bi bi-x-circle"></i> Cancel
            </button>
          </div>
          <div class="progress mb-2" style="height: 25px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" id="searchProgress"
                 role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
              <span id="progressText">0%</span>
            </div>
          </div>
          <div class="live-stats text-muted">
            <span class="stat-item"><i class="bi bi-list-check"></i> Processed: <strong id="processedCount">0</strong> / <span id="totalCount">0</span></span>
            <span class="stat-item text-success"><i class="bi bi-check-circle"></i> Found: <strong id="foundLiveCount">0</strong></span>
            <span class="stat-item"><i class="bi bi-layers"></i> Chunk: <span id="chunkInfo">0/0</span></span>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="bi bi-list-ul"></i> Search Results</h5>
          <div>
            <span class="badge bg-success me-1" id="foundBadge" style="display:none;">Found: 0</span>
            <span class="badge bg-danger me-1" id="notFoundBadge" style="display:none;">Not Found: 0</span>
            <span class="badge bg-secondary" id="resultCount">0 result(s)</span>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
            <table class="table table-hover table-striped mb-0" id="resultsTable">
              <thead class="table-dark sticky-top">
                <tr>
                  <th>AWB / Filename</th>
                  <th>Status</th>
                  <th>Video</th>
                  <th>Size</th>
                  <% if (isMohitOperator) { %><th>Actions</th><% } %>
                </tr>
              </thead>
              <tbody id="resultsBody">
                <tr>
                  <td colspan="<%= isMohitOperator ? 5 : 4 %>" class="text-center text-muted py-4">
                    <i class="bi bi-search fs-1 d-block mb-2"></i>
                    Search for videos using AWB, date, or keyword
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
const isMohitOperator = <%= isMohitOperator %>;

// Search mode toggle
document.querySelectorAll('.search-mode-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    document.querySelectorAll('.search-mode-btn').forEach(b => b.classList.remove('active'));
    this.classList.add('active');

    const mode = this.dataset.mode;
    document.getElementById('awbSearchPanel').classList.toggle('d-none', mode !== 'awb');
    document.getElementById('dateSearchPanel').classList.toggle('d-none', mode !== 'date');
    document.getElementById('keywordSearchPanel').classList.toggle('d-none', mode !== 'keyword');
  });
});

// Show alert
function showAlert(message, type = 'info') {
  const container = document.getElementById('alertContainer');
  container.innerHTML = `
    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
      <i class="bi bi-${type === 'danger' ? 'exclamation-triangle' : 'info-circle'}"></i> ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  `;
}

// Render results
function renderResults(results, isDateSearch = false) {
  const tbody = document.getElementById('resultsBody');
  const count = document.getElementById('resultCount');

  count.textContent = results.length + ' result(s)';

  if (!results.length) {
    tbody.innerHTML = `
      <tr>
        <td colspan="${isMohitOperator ? 5 : 4}" class="text-center text-muted py-4">
          <i class="bi bi-search fs-1 d-block mb-2"></i>
          No videos found
        </td>
      </tr>
    `;
    return;
  }

  tbody.innerHTML = results.map(r => {
    const found = r.found !== false;
    const displayName = r.awb || r.filename || r.key?.split('/').pop() || 'Unknown';

    return `
      <tr class="${found ? 'found-row' : 'not-found-row'}">
        <td><strong>${escapeHtml(displayName)}</strong></td>
        <td>
          ${found
            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Found</span>'
            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Not Found</span>'}
        </td>
        <td>
          ${found && r.url
            ? `<a href="${r.url}" target="_blank" class="video-link"><i class="bi bi-play-circle"></i> ${escapeHtml(r.filename || 'Download')}</a>`
            : '<span class="text-muted">-</span>'}
        </td>
        <td>${found && r.sizeFormatted ? r.sizeFormatted : '-'}</td>
        ${isMohitOperator ? `
          <td>
            ${found && r.key
              ? `<button class="btn btn-sm btn-outline-danger delete-btn" data-key="${escapeHtml(r.key)}" data-name="${escapeHtml(displayName)}"><i class="bi bi-trash"></i></button>`
              : '-'}
          </td>
        ` : ''}
      </tr>
    `;
  }).join('');
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text || '';
  return div.innerHTML;
}

// Constants
const MAX_SINGLE_REQUEST = 500;
let currentEventSource = null;
let streamedResults = [];

// Progress UI helpers
function showProgress() {
  document.getElementById('progressContainer').classList.add('active');
}

function hideProgress() {
  document.getElementById('progressContainer').classList.remove('active');
}

function updateProgress(processed, total, found, chunk, totalChunks) {
  const percent = Math.round((processed / total) * 100);
  const bar = document.getElementById('searchProgress');
  bar.style.width = percent + '%';
  bar.setAttribute('aria-valuenow', percent);
  document.getElementById('progressText').textContent = percent + '%';
  document.getElementById('processedCount').textContent = processed.toLocaleString();
  document.getElementById('totalCount').textContent = total.toLocaleString();
  document.getElementById('foundLiveCount').textContent = found.toLocaleString();
  document.getElementById('chunkInfo').textContent = `${chunk}/${totalChunks}`;
}

function updateResultBadges(found, notFound) {
  const foundBadge = document.getElementById('foundBadge');
  const notFoundBadge = document.getElementById('notFoundBadge');
  if (found > 0) {
    foundBadge.textContent = 'Found: ' + found.toLocaleString();
    foundBadge.style.display = 'inline-block';
  }
  if (notFound > 0) {
    notFoundBadge.textContent = 'Not Found: ' + notFound.toLocaleString();
    notFoundBadge.style.display = 'inline-block';
  }
}

// Append results to table (for streaming)
function appendResults(items) {
  const tbody = document.getElementById('resultsBody');
  const countEl = document.getElementById('resultCount');

  // Clear placeholder if first results
  if (streamedResults.length === 0) {
    tbody.innerHTML = '';
  }

  items.forEach(r => {
    streamedResults.push(r);
    const found = r.found !== false;
    const displayName = r.awb || r.filename || r.key?.split('/').pop() || 'Unknown';

    const tr = document.createElement('tr');
    tr.className = found ? 'found-row' : 'not-found-row';
    tr.innerHTML = `
      <td><strong>${escapeHtml(displayName)}</strong></td>
      <td>
        ${found
          ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Found</span>'
          : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Not Found</span>'}
      </td>
      <td>
        ${found && r.url
          ? `<a href="${r.url}" target="_blank" class="video-link"><i class="bi bi-play-circle"></i> ${escapeHtml(r.filename || 'Download')}</a>`
          : '<span class="text-muted">-</span>'}
      </td>
      <td>${found && r.sizeFormatted ? r.sizeFormatted : '-'}</td>
      ${isMohitOperator ? `
        <td>
          ${found && r.key
            ? `<button class="btn btn-sm btn-outline-danger delete-btn" data-key="${escapeHtml(r.key)}" data-name="${escapeHtml(displayName)}"><i class="bi bi-trash"></i></button>`
            : '-'}
        </td>
      ` : ''}
    `;
    tbody.appendChild(tr);
  });

  countEl.textContent = streamedResults.length + ' result(s)';
}

// Streaming search using SSE
function streamSearch(awbList) {
  return new Promise((resolve, reject) => {
    streamedResults = [];
    document.getElementById('foundBadge').style.display = 'none';
    document.getElementById('notFoundBadge').style.display = 'none';
    document.getElementById('resultsBody').innerHTML = '';

    const encoded = encodeURIComponent(awbList);
    currentEventSource = new EventSource(`/video-finder/api/search-stream?awbList=${encoded}`);

    let totalAwbs = 0;
    let foundCount = 0;

    currentEventSource.addEventListener('start', (e) => {
      const data = JSON.parse(e.data);
      totalAwbs = data.total;
      showProgress();
      updateProgress(0, totalAwbs, 0, 0, Math.ceil(totalAwbs / data.chunkSize));
    });

    currentEventSource.addEventListener('progress', (e) => {
      const data = JSON.parse(e.data);
      foundCount = data.found;
      updateProgress(data.processed, data.total, data.found, data.chunk, data.totalChunks);
    });

    currentEventSource.addEventListener('found', (e) => {
      const data = JSON.parse(e.data);
      appendResults(data.items);
    });

    currentEventSource.addEventListener('complete', (e) => {
      const data = JSON.parse(e.data);
      currentEventSource.close();
      currentEventSource = null;
      hideProgress();
      updateResultBadges(data.found, data.notFound);
      resolve(data);
    });

    currentEventSource.addEventListener('error', (e) => {
      if (e.data) {
        const data = JSON.parse(e.data);
        reject(new Error(data.message));
      } else {
        reject(new Error('Connection lost'));
      }
      currentEventSource.close();
      currentEventSource = null;
      hideProgress();
    });

    currentEventSource.onerror = () => {
      if (currentEventSource) {
        currentEventSource.close();
        currentEventSource = null;
      }
      hideProgress();
      reject(new Error('Connection lost'));
    };
  });
}

// Cancel button
document.getElementById('cancelSearchBtn').addEventListener('click', function() {
  if (currentEventSource) {
    currentEventSource.close();
    currentEventSource = null;
  }
  hideProgress();
  showAlert('Search cancelled', 'warning');
  document.getElementById('searchAwbBtn').disabled = false;
  document.getElementById('searchAwbBtn').innerHTML = '<i class="bi bi-search"></i> Search AWBs';
});

// AWB Search (AJAX or Streaming based on count)
document.getElementById('searchAwbBtn').addEventListener('click', async function() {
  const awbList = document.getElementById('awbList').value.trim();
  if (!awbList) {
    showAlert('Please enter at least one AWB number', 'warning');
    return;
  }

  // Count AWBs
  const awbCount = awbList.split(/[\n,\s|]+/).filter(s => s.trim()).length;

  this.disabled = true;
  this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Searching...';

  try {
    if (awbCount > MAX_SINGLE_REQUEST) {
      // Use streaming for large searches
      showAlert(`Large search (${awbCount.toLocaleString()} AWBs) - streaming results...`, 'info');
      const result = await streamSearch(awbList);
      showAlert(`Complete! Found ${result.found.toLocaleString()} of ${result.total.toLocaleString()} videos`, 'success');
    } else {
      // Use regular AJAX for smaller searches
      const res = await fetch('/video-finder/api/search', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ awbList })
      });
      const data = await res.json();

      if (data.error) {
        showAlert(data.error, 'danger');
        return;
      }

      renderResults(data.results);
      updateResultBadges(data.found, data.total - data.found);
      showAlert(`Found ${data.found} of ${data.total} videos`, 'success');
    }
  } catch (err) {
    showAlert('Search failed: ' + err.message, 'danger');
  } finally {
    this.disabled = false;
    this.innerHTML = '<i class="bi bi-search"></i> Search AWBs';
  }
});

// Date Search (AJAX)
document.getElementById('searchDateBtn').addEventListener('click', async function() {
  const date = document.getElementById('searchDate').value;
  if (!date) {
    showAlert('Please select a date', 'warning');
    return;
  }

  this.disabled = true;
  this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Loading...';

  try {
    const res = await fetch('/video-finder/date/' + date);
    const data = await res.json();

    if (data.error) {
      showAlert(data.error, 'danger');
      return;
    }

    // Transform videos to results format
    const results = (data.videos || []).map(v => ({
      found: true,
      filename: v.filename,
      key: v.key,
      url: v.url,
      size: v.size,
      sizeFormatted: v.sizeFormatted
    }));

    renderResults(results, true);
    showAlert(`Found ${data.count} videos for ${date}`, 'success');
  } catch (err) {
    showAlert('Failed to load videos: ' + err.message, 'danger');
  } finally {
    this.disabled = false;
    this.innerHTML = '<i class="bi bi-calendar-check"></i> Browse Date';
  }
});

// Keyword Search (AJAX)
document.getElementById('searchKeywordBtn').addEventListener('click', async function() {
  const keyword = document.getElementById('keywordInput').value.trim();
  const date = document.getElementById('keywordDate').value;

  if (!keyword) {
    showAlert('Please enter a search keyword', 'warning');
    return;
  }

  this.disabled = true;
  this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Searching...';

  try {
    const params = new URLSearchParams({ keyword });
    if (date) params.append('date', date);

    const res = await fetch('/video-finder/api/keyword?' + params);
    const data = await res.json();

    if (data.error) {
      showAlert(data.error, 'danger');
      return;
    }

    renderResults(data.results);
    showAlert(`Found ${data.count} videos matching "${keyword}"`, 'success');
  } catch (err) {
    showAlert('Search failed: ' + err.message, 'danger');
  } finally {
    this.disabled = false;
    this.innerHTML = '<i class="bi bi-search"></i> Search Keyword';
  }
});

// Bulk file upload
const bulkFile = document.getElementById('bulkFile');
const bulkSearchBtn = document.getElementById('bulkSearchBtn');

bulkFile.addEventListener('change', function() {
  bulkSearchBtn.disabled = !this.files.length;
});

bulkSearchBtn.addEventListener('click', async function() {
  if (!bulkFile.files.length) return;

  this.disabled = true;
  this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Searching...';

  const formData = new FormData();
  formData.append('awbFile', bulkFile.files[0]);

  try {
    const res = await fetch('/video-finder/bulk-search', {
      method: 'POST',
      body: formData
    });
    const data = await res.json();

    if (data.error) {
      showAlert(data.error, 'danger');
      return;
    }

    renderResults(data.results);
    showAlert(`Found ${data.found} of ${data.total} videos`, 'success');
  } catch (err) {
    showAlert('Bulk search failed: ' + err.message, 'danger');
  } finally {
    this.disabled = false;
    this.innerHTML = '<i class="bi bi-file-earmark-spreadsheet"></i> Bulk Search';
  }
});

// Delete handler
document.addEventListener('click', async function(e) {
  const btn = e.target.closest('.delete-btn');
  if (!btn) return;

  const key = btn.dataset.key;
  const name = btn.dataset.name;

  if (!confirm(`Delete video?\n\n${name}\n\nThis cannot be undone.`)) {
    return;
  }

  btn.disabled = true;
  btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

  try {
    const res = await fetch('/video-finder/delete', {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ key })
    });
    const data = await res.json();

    if (data.success) {
      btn.closest('tr').remove();
      showAlert('Video deleted successfully', 'success');
    } else {
      showAlert('Delete failed: ' + (data.error || 'Unknown error'), 'danger');
      btn.disabled = false;
      btn.innerHTML = '<i class="bi bi-trash"></i>';
    }
  } catch (err) {
    showAlert('Delete failed: ' + err.message, 'danger');
    btn.disabled = false;
    btn.innerHTML = '<i class="bi bi-trash"></i>';
  }
});

// Enter key handlers
document.getElementById('awbList').addEventListener('keydown', function(e) {
  if (e.key === 'Enter' && e.ctrlKey) {
    document.getElementById('searchAwbBtn').click();
  }
});

document.getElementById('keywordInput').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    document.getElementById('searchKeywordBtn').click();
  }
});
</script>
</body>
</html>
