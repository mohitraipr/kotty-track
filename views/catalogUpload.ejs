<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>File Upload & Search</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });
  </script>
</head>
<body class="bg-light py-5">

  <div class="container">
    <div class="text-center mb-5">
      <h1 class="fw-bold">üìÅ Upload & üîç Search Your Files</h1>
      <p class="text-muted">Easily manage and locate your uploaded files by marketplace.</p>
    </div>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- Upload Section -->
    <div class="card shadow-sm mb-5">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">üì§ Upload File</h5>
      </div>
      <div class="card-body">
        <form action="/catalogUpload/upload" method="POST" enctype="multipart/form-data">
          <div class="row g-3">
            <div class="col-md-6">
              <label for="marketplace" class="form-label">
                Marketplace
                <span data-bs-toggle="tooltip" title="Choose the marketplace you want to upload the file for.">
                  ‚ìò
                </span>
              </label>
              <select name="marketplace" id="marketplace" class="form-select" required>
                <option value="">Select marketplace</option>
                <% markets.forEach(m => { %>
                  <option value="<%= m.id %>"><%= m.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6">
              <label for="csvfile" class="form-label">
                Select File
                <span data-bs-toggle="tooltip" title="Accepted formats: .csv, .xls, .xlsx.">
                  ‚ìò
                </span>
              </label>
              <input
                type="file"
                class="form-control"
                id="csvfile"
                name="csvfile"
                accept=".csv,.xls,.xlsx"
                required>
            </div>
          </div>
          <div class="mt-4">
            <button type="submit" class="btn btn-primary w-100">
              Upload Now
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Search Section -->
    <div class="card shadow-sm mb-5">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">üîç Search Files</h5>
      </div>
      <div class="card-body">
        <form action="/catalogUpload/search" method="GET">
          <div class="row g-3">
            <div class="col-md-4">
              <label for="marketplaceSearch" class="form-label">
                Marketplace
                <span data-bs-toggle="tooltip" title="Filter search by marketplace.">
                  ‚ìò
                </span>
              </label>
              <select name="marketplace" id="marketplaceSearch" class="form-select" required>
                <option value="">Select marketplace</option>
                <% markets.forEach(m => { %>
                  <option
                    value="<%= m.id %>"
                    <%= selectedMarketplace==m.id?'selected':'' %>>
                    <%= m.name %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-8">
              <label for="search" class="form-label">
                Search Term
                <span data-bs-toggle="tooltip" title="Enter product name, keyword, or any term to find your files.">
                  ‚ìò
                </span>
              </label>
              <input
                type="text"
                class="form-control"
                id="search"
                name="q"
                placeholder="e.g., Nike Shoes"
                required
                value="<%= q %>">
            </div>
          </div>
          <div class="mt-4">
            <button type="submit" class="btn btn-success w-100">
              Search Files
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Search Results -->
    <% if (files && files.length) { %>
      <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">üìÑ Matching Files</h5>
        </div>
        <ul class="list-group list-group-flush">
          <% files.forEach(f => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><i class="bi bi-file-earmark-text me-2"></i><%= f.original_filename %></span>
              <a href="/catalogUpload/download/<%= f.id %>" class="btn btn-sm btn-outline-secondary">
                Download
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

  </div>
</body>
</html>
