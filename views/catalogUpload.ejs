<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>File Upload & Search</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    .card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .btn-primary, .btn-success {
      padding: 0.6rem 2rem;
      font-size: 1rem;
    }

    .form-control:focus, .form-select:focus {
      box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .list-group-item {
      border: none;
      border-bottom: 1px solid #eee;
    }

    .tooltip-icon {
      cursor: pointer;
      color: #6c757d;
    }
  </style>
</head>
<body class="py-5">

  <div class="container">
    <div class="text-center mb-5">
      <h1 class="fw-bold display-6">üìÅ Upload & Search Portal</h1>
      <p class="text-muted fs-5">Manage your files across marketplaces easily and efficiently</p>
    </div>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- Upload Card -->
    <div class="card mb-5 p-4">
      <div class="section-title text-primary mb-3">
        <i class="bi bi-upload"></i> Upload File
      </div>
      <form action="/catalogUpload/upload" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="row g-4">
          <div class="col-md-6">
            <label for="marketplace" class="form-label">
              Marketplace <i class="bi bi-info-circle tooltip-icon" data-bs-toggle="tooltip" title="Choose where this file belongs"></i>
            </label>
            <select name="marketplace" id="marketplace" class="form-select" required>
              <option value="">Select marketplace</option>
              <% markets.forEach(m => { %>
                <option value="<%= m.id %>"><%= m.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-6">
            <label for="csvfile" class="form-label">
              Select File <i class="bi bi-info-circle tooltip-icon" data-bs-toggle="tooltip" title="Upload CSV, XLS or XLSX format only"></i>
            </label>
            <input type="file" class="form-control" id="csvfile" name="csvfile" accept=".csv,.xls,.xlsx" required>
          </div>
        </div>
        <div class="mt-4">
          <button type="submit" class="btn btn-primary w-100"><i class="bi bi-cloud-arrow-up me-2"></i> Upload File</button>
        </div>
      </form>
    </div>

    <!-- Search Card -->
    <div class="card mb-5 p-4">
      <div class="section-title text-success mb-3">
        <i class="bi bi-search"></i> Search Files
      </div>
      <form action="/catalogUpload/search" method="GET">
        <div class="row g-4">
          <div class="col-md-4">
            <label for="marketplaceSearch" class="form-label">
              Marketplace <i class="bi bi-info-circle tooltip-icon" data-bs-toggle="tooltip" title="Filter search by specific marketplace"></i>
            </label>
            <select name="marketplace" id="marketplaceSearch" class="form-select" required>
              <option value="">Select marketplace</option>
              <% markets.forEach(m => { %>
                <option value="<%= m.id %>" <%= selectedMarketplace==m.id?'selected':'' %>><%= m.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-8">
            <label for="search" class="form-label">
              Search Term <i class="bi bi-info-circle tooltip-icon" data-bs-toggle="tooltip" title="Search by product name, SKU, etc."></i>
            </label>
            <input type="text" class="form-control" id="search" name="q" placeholder="e.g. Apple Watch Series 8" required value="<%= q %>">
          </div>
        </div>
        <div class="mt-4">
          <button type="submit" class="btn btn-success w-100"><i class="bi bi-search me-2"></i> Find Files</button>
        </div>
      </form>
    </div>

    <!-- Results -->
    <% if (files && files.length) { %>
      <div class="card p-4">
        <div class="section-title text-info mb-3">
          <i class="bi bi-folder2-open"></i> Matching Files
        </div>
        <ul class="list-group list-group-flush">
          <% files.forEach(f => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><i class="bi bi-file-earmark-text me-2 text-muted"></i> <%= f.original_filename %></span>
              <a href="/catalogUpload/download/<%= f.id %>" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-download me-1"></i> Download
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
