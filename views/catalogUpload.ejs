<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>File Upload & Search</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"/>
</head>
<body class="container py-5">

  <h1 class="mb-4">Upload & Search Your Files</h1>
  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <!-- Upload Form -->
  <form action="/catalogUpload/upload" method="POST" enctype="multipart/form-data" class="mb-5">
    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="marketplace" class="form-label">Marketplace</label>
        <select name="marketplace" id="marketplace" class="form-select" required>
          <option value="">Select marketplace</option>
          <% markets.forEach(m => { %>
            <option value="<%= m.id %>"><%= m.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6 mb-3">
        <label for="csvfile" class="form-label">Select File</label>
        <input
          type="file"
          class="form-control"
          id="csvfile"
          name="csvfile"
          accept=".csv,.xls,.xlsx"
          required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
  </form>

  <hr/>

  <!-- Search Form -->
  <form action="/catalogUpload/search" method="GET" class="mb-4">
    <div class="row">
      <div class="col-md-4 mb-3">
        <label for="marketplaceSearch" class="form-label">Marketplace</label>
        <select name="marketplace" id="marketplaceSearch" class="form-select" required>
          <option value="">Select marketplace</option>
          <% markets.forEach(m => { %>
            <option
              value="<%= m.id %>"
              <%= selectedMarketplace==m.id?'selected':'' %>>
              <%= m.name %>
            </option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-8 mb-3">
        <label for="search" class="form-label">Search Term</label>
        <input
          type="text"
          class="form-control"
          id="search"
          name="q"
          placeholder="Enter search term"
          required
          value="<%= q %>">
      </div>
    </div>
    <button type="submit" class="btn btn-success">Search</button>
  </form>

  <!-- Results -->
  <% if (files && files.length) { %>
    <h2 class="mt-4">Matching Files</h2>
    <ul class="list-group">
      <% files.forEach(f => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= f.original_filename %>
          <a href="/catalogUpload/download/<%= f.id %>" class="btn btn-sm btn-outline-secondary">
            Download
          </a>
        </li>
      <% }) %>
    </ul>
  <% } %>

</body>
</html>
