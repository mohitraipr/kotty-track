                <label class="form-label">Upload Excel File</label>
                <input type="file" name="excel_file" class="form-control" accept=".xlsx, .xls" required />
              </div>
              <button type="submit" class="btn btn-primary">Upload and Process</button>
            </form>
          </div>
        </div>
      </div>
    </div>
