<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Purchase Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Purchase</a>
    <div class="ms-auto">
      <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
    </div>
  </div>
</nav>
<div class="container my-4">
  <%- include('partials/flashMessages') %>

  <h2>Parties</h2>
  <% if (user.roleName === 'accounts') { %>
  <form method="post" action="/purchase/parties" class="row g-2 mb-3">
    <div class="col-md-3">
      <input type="text" name="name" class="form-control" placeholder="Party Name" required>
    </div>
    <div class="col-md-2">
      <input type="text" name="gst_number" class="form-control" placeholder="GST Number">
    </div>
    <div class="col-md-2">
      <input type="text" name="state" class="form-control" placeholder="State">
    </div>
    <div class="col-md-2">
      <input type="text" name="pincode" class="form-control" placeholder="Pincode">
    </div>
    <div class="col-md-2">
      <input type="number" name="due_payment_days" class="form-control" placeholder="Due Days">
    </div>
    <div class="col-md-1 d-grid">
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  </form>
  <% } %>

  <div class="table-responsive mb-5">
  <table class="table table-bordered table-sm align-middle">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>GST Number</th>
        <th>State</th>
        <th>Pincode</th>
        <th>Due Days</th>
        <% if (user.roleName === 'accounts') { %><th>Action</th><% } %>
      </tr>
    </thead>
    <tbody>
    <% parties.forEach(p => { %>
      <tr>
        <form method="post" action="/purchase/parties/<%= p.id %>">
          <td><input type="text" name="name" value="<%= p.name %>" class="form-control form-control-sm"></td>
          <td><input type="text" name="gst_number" value="<%= p.gst_number %>" class="form-control form-control-sm"></td>
          <td><input type="text" name="state" value="<%= p.state %>" class="form-control form-control-sm"></td>
          <td><input type="text" name="pincode" value="<%= p.pincode %>" class="form-control form-control-sm"></td>
          <td><input type="number" name="due_payment_days" value="<%= p.due_payment_days %>" class="form-control form-control-sm"></td>
          <% if (user.roleName === 'accounts') { %>
          <td><button type="submit" class="btn btn-sm btn-primary">Update</button></td>
          <% } %>
        </form>
      </tr>
    <% }) %>
    </tbody>
  </table>
  </div>

  <h2>Factories</h2>
  <% if (user.roleName === 'accounts') { %>
  <form method="post" action="/purchase/factories" class="row g-2 mb-3">
    <div class="col-md-4">
      <input type="text" name="name" class="form-control" placeholder="Factory Name" required>
    </div>
    <div class="col-md-4">
      <input type="text" name="gst_number" class="form-control" placeholder="GST Number">
    </div>
    <div class="col-md-3">
      <input type="text" name="state" class="form-control" placeholder="State">
    </div>
    <div class="col-md-1 d-grid">
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  </form>
  <% } %>

  <div class="table-responsive">
  <table class="table table-bordered table-sm align-middle">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>GST Number</th>
        <th>State</th>
        <% if (user.roleName === 'accounts') { %><th>Action</th><% } %>
      </tr>
    </thead>
    <tbody>
    <% factories.forEach(f => { %>
      <tr>
        <form method="post" action="/purchase/factories/<%= f.id %>">
          <td><input type="text" name="name" value="<%= f.name %>" class="form-control form-control-sm"></td>
          <td><input type="text" name="gst_number" value="<%= f.gst_number %>" class="form-control form-control-sm"></td>
          <td><input type="text" name="state" value="<%= f.state %>" class="form-control form-control-sm"></td>
          <% if (user.roleName === 'accounts') { %>
          <td><button type="submit" class="btn btn-sm btn-primary">Update</button></td>
          <% } %>
        </form>
      </tr>
    <% }) %>
    </tbody>
  </table>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
