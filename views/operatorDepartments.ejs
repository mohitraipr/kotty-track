<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Departments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-shadow {
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    .form-control, .form-select {
      min-height: 42px;
    }
  </style>
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Dashboard</a>
    <div class="ms-auto d-flex align-items-center">
      <span class="text-white me-2">Logged in as <%= user.username %></span>
      <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
    </div>
  </div>
</nav>

<div class="container my-4">
  <% if (error && error.length) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (success && success.length) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <div class="card card-shadow mb-4">
    <div class="card-body">
      <h5 class="card-title">Create Department</h5>
      <form action="/operator/departments/create" method="POST" class="row g-3">
        <div class="col-md-4">
          <input type="text" name="name" class="form-control" placeholder="Department name" required>
        </div>
        <div class="col-md-4">
          <select name="supervisor_id" class="form-select">
            <option value="">-- Assign Supervisor --</option>
            <% supervisors.forEach(function(s){ %>
              <option value="<%= s.id %>"><%= s.username %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Create</button>
        </div>
      </form>
    </div>
  </div>

  <div class="card card-shadow mb-4">
    <div class="card-body">
      <h5 class="card-title">Departments</h5>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Supervisor</th>
              <th>Change Supervisor</th>
            </tr>
          </thead>
          <tbody>
            <% departments.forEach(function(d){ %>
              <tr>
                <td><%= d.id %></td>
                <td><%= d.name %></td>
                <td><%= d.supervisor_name || 'Unassigned' %></td>
                <td>
                  <form action="/operator/departments/change-supervisor" method="POST" class="row g-2 align-items-center">
                    <input type="hidden" name="department_id" value="<%= d.id %>">
                    <div class="col-8">
                      <select name="supervisor_id" class="form-select form-select-sm" required>
                        <% supervisors.forEach(function(s){ %>
                          <option value="<%= s.id %>" <%= d.supervisor_name===s.username ? 'selected' : '' %>><%= s.username %></option>
                        <% }) %>
                      </select>
                    </div>
                    <div class="col-4">
                      <button type="submit" class="btn btn-sm btn-outline-primary w-100">Update</button>
                    </div>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card card-shadow">
    <div class="card-body">
      <h5 class="card-title">Supervisors</h5>
      <div class="accordion" id="supervisorsAccordion">
        <% supervisors.forEach(function(s, index){ %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="heading<%= index %>">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                <strong><%= s.username %></strong> (ID: <%= s.id %>)
              </button>
            </h2>
            <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#supervisorsAccordion">
              <div class="accordion-body">
                <form action="/operator/supervisor/<%= s.id %>/toggle" method="POST" class="mb-3">
                  <input type="hidden" name="action" value="deactivate">
                  <button type="submit" class="btn btn-sm btn-danger">Deactivate</button>
                </form>
                <p><strong>Employees under this supervisor:</strong></p>
                <ul class="list-group">
                  <% (s.employees || []).forEach(function(emp){ %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <%= emp.name %> <span class="badge bg-secondary">ID: <%= emp.id %></span>
                    </li>
                  <% }) %>
                  <% if (!(s.employees && s.employees.length)) { %>
                    <li class="list-group-item text-muted">No employees assigned.</li>
                  <% } %>
                </ul>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
